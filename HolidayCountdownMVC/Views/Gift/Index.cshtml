@model IEnumerable<HolidayCountdownMVC.Models.Gift>

@{
    ViewData["Title"] = "Index";
}

<h4>Gift List</h4>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-outline-success"><i class="fa fa-plus-square"></i>Create New Gift</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GiftId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GiftId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GiftId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

